@model DancingGoat.Areas.Admin.Models.SignInViewModel

<header>
    <div class="content">
        <h1>Sign In</h1>
        <p>For your sample app to automatically check for changes in your subscription, you should sign in using your Kentico Cloud credentials.</p>
    </div>
</header>
@Html.Partial("_MessagesPartial")
<section class="detached">
    <div class="form-panels">

        @{
            ViewBag.ButtonType = "primary";
            ViewBag.ShowSwitcher = false;
        }

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @Action = @"https://horusproduction.e1.loginrocket.com/v1/login", Enctype = "multipart/form-data", Id = "signInForm", @Class = "form-panel", Data_Origin = "recheck" }))
        {
            @Html.Partial("_SignInPartial", Model)
        }
    </div>
</section>

@section Scripts
{
    @Scripts.Render("~/Areas/Admin/Scripts/identityForms.js")
}
